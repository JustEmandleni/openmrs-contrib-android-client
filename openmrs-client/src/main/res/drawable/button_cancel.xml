<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/red" />
            <gradient android:angle="270" android:endColor="@color/light_red" android:startColor="@color/red" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/red" />
            <solid android:color="@color/light_red" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/red" />
            <gradient android:angle="270" android:endColor="@color/red" android:startColor="@color/light_red" />
        </shape>
    </item>
</selector>